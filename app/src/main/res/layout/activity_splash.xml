<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.syiyi.splash.ui.SplashActivity">

    <RelativeLayout
        android:id="@+id/rl_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_splash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ca8980"></android.support.v4.view.ViewPager>>
        <Button
            android:id="@+id/btn_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进入XXX"
            android:visibility="gone"
            android:textColor="#000000"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"/>
        <RadioGroup
            android:id="@+id/rg_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal"
            android:visibility="visible"></RadioGroup>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_startPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#559142"
        android:visibility="gone"></RelativeLayout>
</RelativeLayout>
